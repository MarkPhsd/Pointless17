{
  "name": "pointLess",
  "version": "1.0.151",
  "description": "Point of Sale Ecommerce Kiosk",
  "main": "index.js",
  "CompanyName": "Pointless",
  "author": "Coast to Coast Business Solutions",
  "license": "ISC",
  "scripts": {
    "electron:start": "electron ./",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm install && electron ./app",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder build --win --publish never",
    "deploy Multi Platform": "build --win --x64 --ia32 --p always",
    "deploy32": "electron-builder build --win  --ia32 --publish always ",
    "deploy64": "electron-builder build --win --x64 --publish always ",
    "electron": "wait-on http://localhost:4200 && electron .",
    "general publish": "build  -p always",
    "prestart": "npm run clean",
    "startconcurrently": "concurrently -k \"ng serve\" \"npm run electron\"",
    "runElectron": "concurrently -k \"npm run electron\""
  },
  "dependencies": {
    "@capacitor/electron": "^2.4.8",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.4.0",
    "electron-updater": "^4.0.6",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "electron": "^11.0.0",
    "electron-builder": "^20.28.4",
    "electron-reloader": "^1.2.1"
  },
  "keywords": [
    "capacitor",
    "electron",
    "Point of Sale",
    "POS",
    "Ecommerce",
    "WebStore"
  ],

  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "https://cafecartel.com/pointless"
      }
    ]
  }
}
